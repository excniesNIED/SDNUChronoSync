---
import StructuredData from '../components/SEO/StructuredData.astro';

export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  author?: string;
  image?: string;
  url?: string;
  type?: string;
  noindex?: boolean;
}

const { 
  title, 
  description = "时序同笺 - 多用户课表与日程管理工具。支持个人日程管理、团队协作、课程表导入等功能。",
  keywords = "课表管理,日程管理,时间管理,课程表,团队协作,日历,schedule,calendar",
  author = "SDNU CS Team",
  image = "/favicon.png",
  url = Astro.url.href,
  type = "website",
  noindex = false
} = Astro.props;

const siteUrl = url || Astro.url.href;
const canonicalUrl = new URL(Astro.url.pathname, Astro.site || Astro.url.origin).href;
---

<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <link rel="shortcut icon" href="/favicon.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    
    <!-- 安全相关标头 -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="SAMEORIGIN" />
    <meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />
    <meta http-equiv="Permissions-Policy" content="geolocation=(), microphone=(), camera=()" />
    
    <title>{title}</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={author} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />
    
    <!-- Robots -->
    <meta name="robots" content={noindex ? "noindex, nofollow" : "index, follow"} />
    <meta name="theme-color" content="#6366f1" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.url.origin).href} />
    <meta property="og:locale" content="zh_CN" />
    <meta property="og:site_name" content="时序同笺" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={siteUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.url.origin).href} />
    
    <!-- 中国社交媒体分享优化 -->
    <!-- QQ移动端分享 -->
    <meta itemprop="name" content={title} />
    <meta itemprop="description" content={description} />
    <meta itemprop="image" content={new URL(image, Astro.url.origin).href} />
    
    <!-- QQ PC端分享 -->
    <meta name="qq:title" content={title} />
    <meta name="qq:description" content={description} />
    <meta name="qq:image" content={new URL(image, Astro.url.origin).href} />
    
    <!-- 微博分享 -->
    <meta property="weibo:title" content={title} />
    <meta property="weibo:description" content={description} />
    <meta property="weibo:image" content={new URL(image, Astro.url.origin).href} />
    
    <!-- 百度分享 -->
    <meta property="bdapp:title" content={title} /> 
    <meta property="bdapp:description" content={description} /> 
    <meta property="bdapp:image" content={new URL(image, Astro.url.origin).href} />
    
    <!-- Inter Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    
    <!-- Material Icons -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    
    <!-- Theme initialization script - runs before page render to avoid flash -->
    <script is:inline>
      (function() {
        const theme = localStorage.getItem('app-theme');
        if (theme === 'dark') {
          document.documentElement.classList.add('dark-mode');
        }
      })();
    </script>
    
    <!-- 结构化数据 (JSON-LD) -->
    <StructuredData 
      name={title}
      description={description}
      url={siteUrl}
      image={new URL(image, Astro.url.origin).href}
    />
  </head>
  <body class="bg-gray-50 min-h-screen flex flex-col">
    <slot />
  </body>
</html>

<style is:global>
  html {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  body {
    margin: 0;
    padding: 0;
  }
  
  * {
    box-sizing: border-box;
  }
  
  /* SEO优化：视觉隐藏但对屏幕阅读器和搜索引擎可见 */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
  
  /* 深色模式样式 - 使用反色滤镜 */
  html.dark-mode {
    filter: invert(1) hue-rotate(180deg);
    background-color: #1a1a1a;
  }
  
  /* 图片和媒体元素需要再次反色以保持正常显示 */
  html.dark-mode img,
  html.dark-mode video,
  html.dark-mode iframe,
  html.dark-mode [style*="background-image"] {
    filter: invert(1) hue-rotate(180deg);
  }
  
  /* 平滑过渡效果 */
  html,
  body {
    transition: filter 0.3s ease-in-out, background-color 0.3s ease-in-out;
  }
  
  /* 确保日期时间输入框使用中国格式 */
  input[type="date"], input[type="datetime-local"] {
    font-family: 'Inter', system-ui, sans-serif;
  }
  
  /* 强制浏览器使用中国日期格式 */
  :lang(zh-CN) input[type="date"]::-webkit-datetime-edit-year-field,
  :lang(zh-CN) input[type="datetime-local"]::-webkit-datetime-edit-year-field {
    order: 1;
  }
  
  :lang(zh-CN) input[type="date"]::-webkit-datetime-edit-month-field,
  :lang(zh-CN) input[type="datetime-local"]::-webkit-datetime-edit-month-field {
    order: 2;
  }
  
  :lang(zh-CN) input[type="date"]::-webkit-datetime-edit-day-field,
  :lang(zh-CN) input[type="datetime-local"]::-webkit-datetime-edit-day-field {
    order: 3;
  }
</style>
